scrape_configs:
  - job_name: 'pve'
    static_configs:
      - targets:
        - 10.12.12.100
    metrics_path: /pve
    params:
      module: [default]
      cluster: ['1']
      node: ['1']
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: 127.0.0.1:{{ prometheus_pve_exporter_port }}
