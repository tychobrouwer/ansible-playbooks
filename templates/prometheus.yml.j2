global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'pve'
    static_configs:
      - targets:
        - "{{ hostvars['pve']['ansible_host'] }}"
    metrics_path: /pve
    params:
      module: [default]
      cluster: ['1']
      node: ['1']
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: 127.0.0.1:{{ prometheus_pve_exporter_port }}

  - job_name: 'node'
    static_configs:
      - targets:
{% for host in groups['proxmox_lxc_running'] %}
        - "{{ hostvars[host]['ansible_host'] }}:9100"
{% endfor %}
        - "{{ hostvars['pve']['ansible_host'] }}:9100"
        - "{{ hostvars['docker']['ansible_host'] }}:9100"

  - job_name: 'traefik'
    static_configs:
      - targets:
        - "{{ hostvars['traefik']['ansible_host'] }}:8082"
